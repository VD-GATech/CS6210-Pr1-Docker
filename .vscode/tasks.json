{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build-Make",
            "type": "shell",
            "group": "build",
            "command": "cd ${fileDirname}; make",   // Makefile
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
        },
        {
            "label": "Build-CMake",
            "type": "shell",
            "group": "build",
            "command": "cd ${fileDirname}; cmake -B build -S . && cmake --build build", // CMake
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}